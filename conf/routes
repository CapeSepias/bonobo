# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index
GET         /createKey           controllers.Application.createKeyForm
POST        /createKey           controllers.Application.createKey
GET         /showKeys            controllers.Application.showFirstKeys
POST        /showKeys            controllers.Application.showKeys(direction: String ?= "next", range: String ?= "")
GET         /search              controllers.Application.search
GET         /editKey             controllers.Application.editKey(id: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
