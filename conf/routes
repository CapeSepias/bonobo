# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.showFirstKeys
GET         /key/create          controllers.Application.createKeyForm
POST        /key/create          controllers.Application.createKey
GET         /key/all             controllers.Application.showFirstKeys
POST        /key/all             controllers.Application.showKeys(direction: String ?= "next", range: String ?= "")
GET         /key/search          controllers.Application.search
GET         /key/edit/:id        controllers.Application.editKey(id: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
